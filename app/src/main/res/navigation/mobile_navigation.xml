<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.francescobertamini.app_individuale.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_account_settings"
            app:destination="@id/nav_account_settings" />
        <action
            android:id="@+id/action_nav_home_to_championshipsFragment2"
            app:destination="@id/nav_championships"/>
    </fragment>

    <fragment
        android:id="@+id/nav_account_settings"
        android:name="com.francescobertamini.app_individuale.ui.account_settings.SettingsFragment"
        android:label="Account settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/nav_championships"
        android:name="com.francescobertamini.app_individuale.ui.championshipList.ChampionshipsFragment"
        android:label="ChampionshipsFragment" />
</navigation>